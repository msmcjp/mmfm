<ContentDialog x:Class="Mmfm.Controls.FavoriteRegisterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"             
             PrimaryButtonText="_OK"
             CloseButtonText=""
             DefaultButton="Primary"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding FullPath}" Margin="10" FontSize="14" FontWeight="Bold" TextWrapping="Wrap"/>
        <TextBox Grid.Row="1" x:Name="FavoriteName" HorizontalAlignment="Stretch" Text="{Binding FavoriteName}" Margin="10" FontSize="18"/>
    </Grid>
</ContentDialog>
