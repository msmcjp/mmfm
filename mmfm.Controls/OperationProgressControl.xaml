<ContentDialog x:Class="Mmfm.Controls.OperationProgressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             CloseButtonText="" 
             DefaultButton="Close"
             mc:Ignorable="d" >
    
    <StackPanel Orientation="Vertical" Width="400">
        <TextBlock Text="{Binding Caption}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="5" FontSize="16"/>
        <ProgressBar Height="20" Margin="10,0,10,0" Minimum="0" Maximum="{Binding Count, Mode=OneWay}" Value="{Binding Value, Mode=OneWay}"/>
        <TextBlock TextTrimming="CharacterEllipsis" Text="{Binding StatusText}" Margin="10,4,10,10" />
    </StackPanel>
</ContentDialog>
