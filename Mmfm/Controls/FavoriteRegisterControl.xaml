<UserControl x:Class="Mmfm.FavoriteRegisterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:b="clr-namespace:Mmfm.Behaviors"
             xmlns:c="clr-namespace:Mmfm.Commands"
             xmlns:local="clr-namespace:Mmfm"
             mc:Ignorable="d">
    
    <UserControl.Resources>
        <c:FocusCommand x:Key="FocusCommand"/>
    </UserControl.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{StaticResource FocusCommand}" CommandParameter="{Binding ElementName=FavoriteName}"  />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Enter your favorite name of :" Margin="10" FontSize="18"/>
        <TextBlock Grid.Row="1" Text="{Binding FullPath}" Margin="10" FontSize="18" FontWeight="Bold"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="FavoriteName" Width="500" Text="{Binding FavoriteName}" Margin="10" FontSize="18" b:SelectAllOnFocusBehavior.Enable="True"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Height="40" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <Button Content="_OK" IsDefault="True" Width="100" Margin="8">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:ChangePropertyAction TargetObject="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}" PropertyName="DialogResult" Value="True"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
            <Button IsCancel="True" Content="_Cancel"  Width="100" Margin="8"/>
        </StackPanel>
    </Grid>
</UserControl>
